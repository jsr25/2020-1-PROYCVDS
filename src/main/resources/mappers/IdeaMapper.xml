<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.samples.persistence.mybatisimpl.mappers.IdeaMapper">
    <select id='consultarIdea' parameterType='map' resultMap='IdeaResult'>
         select a.descripcion,
               a.login_Prop,
               a.palabrasClave,
               a.AreaTrabajo,
               a.fecha,
               a.estado
        from
         Idea as a
         where
         a.palabrasClave=#{idea}
         ;
    </select>
    <update id="cambiarEstado" parameterType="map" >
        update idea
        set estado= #{estado}
        where #{idea.descripcion}=descripcion and #{idea.loginProponente}=login_Prop
    </update>
    <insert id="Idea" parameterType='map'>
        insert into idea(descripcion,fecha,login_Prop,id,palabrasClave,AreaTrabajo,estado)  values (#{usuario.descripcion},#{usuario.login_Prop},#{usuario.id},#{usuario.palabrasClave},#{usuario.AreaTrabajo}, #{usuario.fecha}, #{usuario.estado});
    </insert>

    <resultMap type='Idea' id='IdeaResult'>
        <id property='descripcion' column='descripcion'/>
        <result property='loginProponente' column='login_Prop'/>
        <result property='palabras' column='palabrasClave'/>
        <result property='clave' column='AreaTrabajo'/>
        <result property='fecha' column='fecha'/>
        <result property='estado' column='estado'/>
    </resultMap>
</mapper>