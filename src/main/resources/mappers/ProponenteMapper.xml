<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.samples.persistence.mybatisimpl.mappers.ProponenteMapper">
    <select id='consultarInfo' parameterType='map' resultMap='ProponenteResult'>
         select a.login,
                a.nombre,
               a.apellido,
               a.correo,
               a.password

        from
         proponente as a
         where
         a.login=#{usuario}
         ;
    </select>

    <resultMap type='Proponente' id='ProponenteResult'>
        <id property='login' column='login'/>
        <result property='nombre' column='nombre'/>
        <result property='apellido' column='apellido'/>
        <result property='correo' column='correo'/>
        <result property='password' column='password'/>
    </resultMap>

</mapper>
