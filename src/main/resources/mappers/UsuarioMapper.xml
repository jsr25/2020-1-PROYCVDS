<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.samples.persistence.mybatisimpl.mappers.UsuarioMapper">
    <select id='consultarInfo' parameterType='map' resultMap='UsuarioResult'>
         select a.login,
                a.nombre,
               a.apellido,
               a.correo,
               a.password

        from
         usuario as a
         where
         a.login=#{usuario}
         ;
    </select>

    <select id='consultarUsuarios' parameterType='map' resultMap='UsuarioResult'>
         select a.login,
               a.nombre,
               a.apellido,
               a.password,
               a.correo
        from
         usuario as a
         where
         a.login=#{usuario}
         ;
    </select>

    <insert id="registrarUsuario" parameterType='map'>
        insert into usuario(login,nombre,apellido,password,correo) values (#{usuario.login},#{usuario.nombre},#{usuario.apellido},#{usuario.password},#{usuario.correo});
    </insert>

    <delete id="deleteUsuario">
        delete from usuario where login=#{user}
    </delete>


    <resultMap type='Usuario' id='UsuarioResult'>
        <id property='login' column='login'/>
        <result property='nombre' column='nombre'/>
        <result property='apellido' column='apellido'/>
        <result property='correo' column='correo'/>
        <result property='password' column='password'/>
    </resultMap>

</mapper>
